<form method="post" action="/pizza_orders/">
  <label for="first_name">Firstname</label>
  <input id="first_name" value="<%=@order.first_name%>" name="first_name"/>
  <label for="last_name">Lastname</label>
  <input id="last_name" value="<%=@order.last_name%>" name="last_name"/>
  <label for="pizza_select"> Select a pizza :</label>
  <select id="pizza_select" value="<%=@order.topping%>" name="topping">
    <option value="Margherita"> Margherita</option>
    <option value="Pineapple"> Pineapple</option>
    <option value="Jackfruit"> Jackfruit</option>
  </select>
  <label for="quantity"> Quantity</label>
  <input id="quantity" value="<%=@order.quantity%>" name="quantity"/>
  <input type="submit" value="Edit Pizza"/>
</form>
